<h1 class="mb-1 restaurant-show-title text-center mt-3 mb-5">請修改你的支出</h1>

<div class="container col-md-4 m-auto">
  <form action="/expenseTrack/{{expenseTrack._id}}?_method=PUT" method="POST">
    <div class="mb-4 input-group flex-nowrap">
      <label for="event" class="form-label me-5 fs-4">帳目<span class="text-danger">*</span></label>
      <input type="text" class="form-control" id="event" placeholder="帳目" name="event" value="{{expenseTrack.event}}" required />
    </div> 
    <div class="mb-4 input-group flex-nowrap">
      <label for="category" class="form-label me-5 fs-4">分類<span class="text-danger">*</span></label>
      <select class="form-select col" id="categoryId" name="categoryId" required>
        <option selected disabled hidden>請選擇</option>
        {{#each category}}
        <option value="{{this._id}}">{{this.name}}</option>
        {{/each}}
      </select>
    </div>
    <div class="mb-4 input-group flex-nowrap">
      <label for="date" class="form-label me-5 fs-4">日期<span class="text-danger">*</span></label>
      <input type="date" class="form-control" id="date" placeholder="2023/2/29" name="date" value="{{expenseTrack.date}}" required />
    </div>
    <div class="mb-5 input-group flex-nowrap">
      <label for="money" class="form-label me-5 fs-4">支出<span class="text-danger">*</span></label>
      <input type="number" class="form-control" id="money" name="money" value="{{expenseTrack.money}}" required />
    </div>
