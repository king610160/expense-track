<h1 class="mb-1 expenseTrack-show-title">請修改你的支出</h1>
<div class="container">
  <form action="/expenseTrack/{{expenseTrack._id}}?_method=PUT" method="POST">
    <div class="mb-3">
      <label for="event" class="form-label">帳目<span class="text-danger">*</span></label>
      <input type="text" class="form-control" id="event" placeholder="帳目" name="event" value="{{expenseTrack.event}}" required />
    </div>
    <div class="mb-3">
      <label for="category" class="form-label">分類<span class="text-danger">*</span></label>
      <input type="text" class="form-control" id="category" placeholder="食衣住行" list="categoryOptions" name="category" value="{{expenseTrack.category}}" required />
      {{! 使用datalist，讓使用者可選擇或自行輸入 }}
      <datalist id="categoryOptions">
        <option>家居物業</option>
        <option>交通出行</option>
        <option>休閒娛樂</option>
        <option>餐飲食品</option>
        <option>其他</option>
      </datalist>
    </div>
    <div class="mb-3">
      <label for="date" class="form-label">日期<span class="text-danger">*</span></label>
      <input type="date" class="form-control" id="date" placeholder="2023/2/29" name="date" value="{{expenseTrack.date}}" required />
    </div>
    <div class="mb-3">
      <label for="money" class="form-label">支出<span class="text-danger">*</span></label>
      <input type="number" class="form-control" id="money" name="money" value="{{expenseTrack.money}}" required />
    </div>
    <div class="text-center">
      <button type="submit" class="btn btn-primary">
        修改帳目
      </button>
      <a href="/">
        <button type="button" class="btn btn-outline-secondary">
          返回首頁
        </button>
      </a>
    </div>
  </form>
</div>